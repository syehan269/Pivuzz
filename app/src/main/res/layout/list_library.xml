<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="@dimen/margin_global">

    <TextView
        android:id="@+id/tv_copy_lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apache 2.0"/>

    <TextView
        android:id="@+id/tv_name_lib"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="com.syehan.pivuzz"
        android:textStyle="bold"
        android:textSize="@dimen/text_title"/>

    <TextView
        android:id="@+id/tv_detail_lib"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apache 2.0"/>

</LinearLayout>